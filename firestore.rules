rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Users collection
    match /users/{email} {
      // Allow all operations for authenticated users
      allow read, write: if isAuthenticated();
    }

    // Tenants collection
    match /tenants/{tenantId} {
      // Allow all operations for authenticated users
      allow read, write: if isAuthenticated();
    }

    // Content collection
    match /content/{contentId} {
      // Allow all operations for authenticated users
      allow read, write: if isAuthenticated();
    }

    // Email queue collection
    match /email_queue/{emailId} {
      // Allow all operations for authenticated users
      allow read, write: if isAuthenticated();
    }

    // Incoming requests collection (contact form submissions)
    match /incoming_request/{requestId} {
      // Allow anyone to write (submit contact forms)
      // No read access needed for public contact forms
      allow write: if true;
      allow read: if false;
    }

    // Default rule - deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
} 